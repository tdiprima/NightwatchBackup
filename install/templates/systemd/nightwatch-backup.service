[Unit]
Description=Nightwatch Backup Backup Run
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/nightwatch-backup run
Nice=10
IOSchedulingClass=best-effort
IOSchedulingPriority=6

# Hardening (you'd tune these per environment)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=false
